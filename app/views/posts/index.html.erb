<% set_meta_tags title: 'Our Two Cents',
                 description: 'Topics we are talking about',
                 keywords: 'Somali web development agency, Webdevelopment agency, london web development agency' %>


<div class="_page">
  <div class="small_space"></div>
  <div class="container">
    <p id="notice"><%= notice %></p>

    <div class="row">
     
      <div class="col">
        
        <div class="row">
          
          <% @posts.each do |post| %>
            <div class="col-md-6 post_item">
              <a href="<%= post_path(post)%>">
                <% if post.featuredimage? %>
                  <div class="cover_photo" style="background-image: url(<%= post.featuredimage(:medium)%>)"></div>
                <% end %>
                <% if post.featuredimage? %>
                    <div class="info">
                      <h1 class="title"><%= truncate(post.title, length: 60) %></h1>
                      <% else %>
                      <div class="info-full">
                        <h1 class="title"><%= truncate(post.title, length: 60) %></h1>
                  <% end %>
                  <p class="time"><%= time_ago_in_words(post.created_at) %></p>
                </div>
              </a>
            </div>
          <% end %>
          
        </div>

      </div>

      <div class="col-md-4">
        <div class="cta_box"></div>
      </div>

    </div>
    
    
      <%#= post.title %>
      <%#= post.content %>
      <%#= link_to 'Show', post %>
      <%#= link_to 'Edit', edit_post_path(post) %>
      <%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    

    <br>

    <%= link_to 'New Post', new_post_path %>

    </div>

    <div class="spaced_footer"></div>
</div>
